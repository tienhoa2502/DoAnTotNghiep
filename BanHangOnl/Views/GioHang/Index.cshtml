                                                    .Include(x=>x.ChiTietPhieuNhaps)
                                                    .ThenInclude(x => x.IdmauNavigation)
                                                    .Include(x => x.ChiTietPhieuNhaps)
                                                    .ThenInclude(x => x.IdsizeNavigation)
                                                    .Include(x=>x.ImgHangHoas)
