                                                                        }
                                                                    </select>
                                                                </div>
                                                                <div class="col-4">
                                                                    <select class="form-control cbSize">
                                                                        @foreach (var s in size)
                                                                        {
                                                                            <option value="@s?.Key.Idsize">@s?.Key.Size1 </option>
                                                                        }
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-4 bg-grey">
                                            <div class="p-5">
