                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                                            <h6 class="text-muted">@hh.IdnhhNavigation?.TenNhh</h6>
                                                            <h6 class="text-black">@hh.TenHh</h6>
                                                            @if(slCon < 1){
                                                                <h6 class="text-danger mb-0">Hết hàng</h6>
                                                            }else{
