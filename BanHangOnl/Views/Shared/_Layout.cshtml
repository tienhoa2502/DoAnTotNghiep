	<script>
		// Đoạn mã JavaScript để xử lý sự kiện click
		document.addEventListener('DOMContentLoaded', function () {
			// Lấy tham chiếu đến các phần tử cần sử dụng
			var userDropdown = document.getElementById('userDropdown');
			var profileDropdown = document.getElementById('profileDropdown');

			// Xử lý sự kiện click
			userDropdown.addEventListener('click', function () {
				// Kiểm tra lớp 'show' có tồn tại không
				var isDropdownVisible = profileDropdown.classList.contains('show');

				// Nếu có, ẩn dropdown, ngược lại hiển thị dropdown
				if (isDropdownVisible) {
					profileDropdown.classList.remove('show');
				} else {
					profileDropdown.classList.add('show');
				}
			});

			// Bổ sung xử lý sự kiện để ẩn dropdown khi click bên ngoài dropdown
			document.addEventListener('click', function (event) {
				if (!userDropdown.contains(event.target) && !profileDropdown.contains(event.target)) {
					profileDropdown.classList.remove('show');
				}
			});
		});
	</script>

