@{
    ViewData["Title"] = "Nhóm tin tức";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    QuanLyBanHangContext context = new QuanLyBanHangContext();
    List<DonViTinh> donViTinhs = context.DonViTinhs.Where(x => x.Active == true).ToList();

}

@model BanHangOnl.Models.HangHoa


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        

        <!-- Horizontal Form -->
        <form method="get">


            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Hình ảnh</label>
                <div class="col-sm-10">
                    @*<div class="col-md-8 col-lg-9">
                        <input type="file" id="fileInput" class="custom-file-input" name="file" style="display: none">
                        <label class="custom-file-upload btn btn-primary btn-sm" for="fileInput">
                            <i class="bi bi-upload"></i> Tải lên tệp
                        </label>
                        @* <input type="file" id="fileInput" class="file-upload" multiple>
                        <label for="fileInput" class="custom-file-upload">Chọn Ảnh</label>
                        <button id="saveButton" onclick="UpdateHangHoa()">Lưu Ảnh</button> *@
                    </div>
                    
                    <div class="form-check">
                        
                        <input class="form-check-input" type="checkbox" id="changesMade" checked="">
                        
                    </div>
                    <div class="col-md-8 col-lg-9">                       

                        <img src="~/AdAssets/img/profile-img.jpg" alt="Profile">
                        <div class="pt-2">
                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                            <a href="#"  class="btn btn-danger btn-sm" title="Remove img"><i class="bi bi-trash"></i></a>
                        </div>
                    </div>

                    <div class="upload-wrapper">
                        <div class="upload-area">
                            <div class="upload-area-img">
                                @*<img src="assets/upload.png" alt="">*@
                                <img src="~/assets/upload.png" width="100" height="100" />

                            </div>
                            <p class="upload-area-text">Select images or <span>browse</span>.</p>
                            <div class="upload-info">
                                <p>
                                    <span class="upload-info-value">0</span> file(s) uploaded.
                                </p>

                            </div>

                        </div>
                        <input style="width:1px" type="file" class="visually-hidden" id="upload-input" multiple>

                        <div class="upload-img">
                        </div>


                    </div>




                </div>
            

            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Mã hàng hóa</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.MaHh" type="text" class="form-control" id="inputText">
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Tên hàng hóa</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.TenHh" type="text" class="form-control" id="inputText">
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Thuộc nhóm</label>
                <div class="col-sm-10">
                    <select asp-for="@Model.Idnhh" id="selectCap" class="form-select" >
                        <option selected="">--Thuộc nhóm--</option>
                        @foreach (NhomHangHoa item in ViewBag.NhomHangHoa)
                        {
                        <option value="@item.Idnhh">@item.TenNhh</option>
                            
                        }

                        
                    </select>
                </div>
            </div>
           
            
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">ĐVT</label>
                <div class="col-md-2">
                    <select asp-for="@Model.Iddvt" class="form-select">
                        <option selected="">--Đơn vị tính--</option>
                        @foreach (DonViTinh item in donViTinhs)
                        {
                            <option value="@item.Iddvt">@item.TenDvt</option>

                        }

                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Giá bán</label>
                <div class="col-md-4">
                    <input asp-for="@Model.GiaBan" type="text"  class="form-control" id="inputText">
                </div>

                <label for="inputEmail3" class="col-sm-2 col-form-label">Giá sale</label>
                <div class="col-md-4">
                    <input asp-for="@Model.GiaSale" type="text" class="form-control" id="inputText">
                </div>
            </div>

            




            <div class="text-center">
                <button id="saveButton" onclick="UpdateHangHoa()" class="btn btn-primary">Lưu</button>
                <button type="reset" class="btn btn-secondary">Hủy</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>
<script>
    // Lấy thẻ select với id 'selectCap'
    var selectCap = document.getElementById('selectCap');

    // Lấy thẻ select với id 'selectNhom'
    var selectNhom = document.getElementById('selectNhom');

    // Thêm sự kiện 'change' cho thẻ select 'selectCap'
    selectCap.addEventListener('change', function () {
        // Kiểm tra giá trị được chọn trong 'selectCap'
        if (selectCap.value == '2') {
            // Nếu giá trị là 2, thì loại bỏ lớp 'd-none' khỏi 'selectNhom'
            selectNhom.classList.remove('d-none');
        } else {
            // Nếu giá trị khác 2, thì thêm lớp 'd-none' vào 'selectNhom'
            selectNhom.classList.add('d-none');
        }
    });
</script>




<form id="formThemHH">

</form>
