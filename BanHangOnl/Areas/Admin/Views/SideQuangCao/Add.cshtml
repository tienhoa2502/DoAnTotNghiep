@{
    ViewData["Title"] = "Slide";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";


}

@model BanHangOnl.Models.SideQuangCao


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        <!-- Horizontal Form -->
        <form action="/SideQuangCao/Them" method="post">

            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Hình ảnh</label>
                <div class="col-sm-10">                    
                        <div class="col-auto">
                            <input asp-for="@Model.Img" type="img" class="form-control" id="inputText">
                        </div>
                        <div class="col-auto mt-3">
                            <button type="button" class="btn btn-outline-secondary">Tải ảnh</button>
                        </div>
                </div>
            </div>


            
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>



