@{
    ViewData["Title"] = "Detail";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";


}

@model BanHangOnl.Models.TinTuc


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        <!-- Horizontal Form -->
        <form action="/TinTuc/Sua" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Hình ảnh</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Img" type="image" class="form-control" id="inputText">
                    <input asp-for="@Model.Idtt" type="hidden" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Tên tin tức</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.TenTt" type="text" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Chi tiết</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.ChiTiet" type="text" class="form-control" id="inputText">
                </div>
            </div>
            @*<div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Số điện thoại</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.DienThoai" type="number" class="form-control" id="inputNumber">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Mail" type="email" class="form-control" id="inputText">
                </div>
            </div>*@
            @*<div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Ghi chú</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.GhiChu" type="text" class="form-control" id="inputText">
                </div>
            </div>*@


            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>



