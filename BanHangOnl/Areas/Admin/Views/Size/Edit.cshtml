@{
    ViewData["Title"] = "Edit";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

@model BanHangOnl.Models.Size


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        <!-- Horizontal Form -->
        <form action="/Size/Sua" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Sizes</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Size1" type="text" class="form-control" id="inputText">
                    <input asp-for="@Model.Idsize" type="hidden" class="form-control" id="inputText">
                </div>
            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="reset" class="btn btn-secondary">Hủy</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>



