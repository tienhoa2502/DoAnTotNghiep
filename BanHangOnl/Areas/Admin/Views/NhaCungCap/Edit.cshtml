@{
    ViewData["Title"] = "Detail";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    
}

@model BanHangOnl.Models.NhaCungCap


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        <!-- Horizontal Form -->
        <form action="/NhaCungCap/Sua" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Mã nhà cung cấp</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.MaNcc" type="text" class="form-control" id="inputText">
                    <input asp-for="@Model.Idncc" type="hidden" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Tên nhà cung cấp</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.TenNcc" type="text" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Địa chỉ</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.DiaChi" type="text" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Số điện thoại</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.DienThoai" type="number" class="form-control" id="inputNumber">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Mail" type="email" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Ghi chú</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.GhiChu" type="text" class="form-control" id="inputText">
                </div>
            </div>

           
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="reset" class="btn btn-secondary">Hủy</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>



