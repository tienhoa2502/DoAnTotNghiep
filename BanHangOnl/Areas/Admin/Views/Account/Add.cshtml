@{
    ViewData["Title"] = "Detail";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    QuanLyNhaHangContext context = new QuanLyNhaHangContext();
    List<VaiTro> ListVaiTro()
    {
        return context.VaiTros.Where(x => x.Active == true).ToList();
    }
}

