@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="pagetitle">
    <h1>Data Tables</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">Data</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-between">
                        <div class="col-auto">
                            <h5 class="card-title">Datatables</h5>
                        </div>
                        <div class="col-auto mt-3">
                            <a href="/TaiKhoan/Them" class="btn btn-success">Thêm mới</a>
                        </div>
                    </div>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">Tài khoản</th>
                                <th scope="col">Mật khẩu</th>
                                <th scope="col">Tên người dùng</th>
                                <th scope="col">Vai trò</th>
                                <th scope="col">Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(TaiKhoan tk in ViewBag.TaiKhoan)
                            {
                                <tr>
                                    <td>@tk.TenTk</td>
                                    <td>@tk.Pass</td>
                                    <td></td>
                                    <td>@tk?.IdvtNavigation?.TenVt</td>
                                    <td>
                                        <a href="/TaiKhoan/ThongTinCaNhan/@tk.Idtk" type="button" class="btn btn-primary btn-sm">Xem</a>
                                        <a href="/TaiKhoan/ViewSua/@tk.Idtk" type="button" class="btn btn-primary btn-sm">Sửa</a>
                                        <a href="/TaiKhoan/Xoa/@tk.Idtk" onclick="return confirm('Bạn có muốn xóa thông tin?')" type="button" class="btn btn-outline-danger btn-sm">Xóa</a>
                                    </td>
                                </tr>
                            }
                       
                           
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>


