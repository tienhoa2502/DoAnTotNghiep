@{
    ViewData["Title"] = "Nhóm tin tức";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";


}

@model BanHangOnl.Models.NhomTinTuc


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        <!-- Horizontal Form -->
        <form action="/TinTuc/Them" method="post">
          
            
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Tên nhóm</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.TenNtt" type="text" class="form-control" id="inputText">
                </div>
            </div>


            
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>



