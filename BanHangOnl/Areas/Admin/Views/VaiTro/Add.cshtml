@{
    ViewData["Title"] = "Detail";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    QuanLyBanHangContext context = new QuanLyBanHangContext();
    List<VaiTro> ListVaiTro()
    {
        return context.VaiTros.Where(x => x.Active == true).ToList();
    }
}

@model BanHangOnl.Models.VaiTro


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Horizontal Form</h5>

        <!-- Horizontal Form -->
        <form action="/VaiTro/Them" method="post">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Mã vai trò</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.MaVt" type="text" class="form-control" id="inputText">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Tên vai trò</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.TenVt" type="text" class="form-control" id="inputText">
                </div>
            </div>
            
           
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="reset" class="btn btn-secondary" onclick="window.history.go(-1);">Hủy</button>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</div>



