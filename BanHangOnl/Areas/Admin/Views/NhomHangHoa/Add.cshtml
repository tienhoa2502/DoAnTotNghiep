<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        // Bắt sự kiện khi giá trị của select "Cấp nhóm" thay đổi
        $("#selectCap").change(function () {
            // Lấy giá trị được chọn
            var selectedValue = $(this).val();

            // Ẩn hoặc hiển thị select "Thuộc nhóm" tùy thuộc vào giá trị được chọn
            if (selectedValue === "2") {
                $("#selectNhom").removeClass("d-none");
            } else {
                $("#selectNhom").addClass("d-none");
            }
        });
    });
</script>